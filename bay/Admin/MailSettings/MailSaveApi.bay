namespace Runtime.WordPress.Admin.MailSettings;

use Runtime.Serializer.BaseType;
use Runtime.Serializer.IntegerType;
use Runtime.Serializer.MapType;
use Runtime.Serializer.Required;
use Runtime.Serializer.StringType;
use Runtime.ORM.Query;
use Runtime.Web.ApiResult;
use Runtime.Web.ApiRequest;
use Runtime.Web.Annotations.ApiMethod;
use Runtime.Widget.Api.SaveApi;
use Runtime.WordPress.Admin.AdminMiddleware;
use Runtime.WordPress.Database.MailSettings;


class MailSaveApi extends SaveApi
{
	/**
	 * Returns api name
	 */
	pure string getApiName() => "admin.wordpress.mail.settings";
	
	
	/**
	 * Returns relation name
	 */
	string getRelationName() => classof MailSettings;
	
	
	/**
	 * Returns middleware
	 */
	Vector<Middleware> getMiddleware() =>
	[
		new AdminMiddleware(),
	];
	
	
	/**
	 * Returns save rules
	 */
	Vector rules() => [];
	
	
	/**
	 * Returns serialize rules
	 */
	void getItemRules(BaseType rules)
	{
		parent(rules);
		rules.addType("enable", new IntegerType());
		rules.addType("plan", new Required());
		rules.addType("plan", new StringType());
		rules.addType("host", new StringType());
		rules.addType("port", new StringType());
		rules.addType("login", new StringType());
		rules.addType("password", new StringType());
		rules.addType("ssl_enable", new IntegerType());
	}
	
	
	/**
	 * Returns item fields
	 */
	Collection getItemFields() =>
	[
		"id",
		"enable",
		"plan",
		"host",
		"port",
		"login",
		"password",
		"ssl_enable",
	];
	
	
	/**
	 * Build query
	 */
	async void buildQuery(Query q)
	{
	}
	
	
	/**
	 * Action save
	 */
	@ApiMethod{ "name": "save" }
	async void actionSave()
	{
		await parent();
	}
	
	
	/**
	 * Action delete
	 */
	@ApiMethod{ "name": "delete" }
	async void actionDelete()
	{
		await parent();
	}
}