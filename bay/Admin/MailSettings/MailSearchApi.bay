namespace Runtime.WordPress.Admin.MailSettings;

use Runtime.ORM.Query;
use Runtime.Web.ApiResult;
use Runtime.Web.ApiRequest;
use Runtime.Web.Annotations.ApiMethod;
use Runtime.Widget.Api.SearchApi;
use Runtime.WordPress.Database.MailSettings;


class MailSearchApi extends SearchApi
{
	/**
	 * Returns api name
	 */
	pure string getApiName() => "admin.wordpress.mail.settings";
	
	
	/**
	 * Returns relation name
	 */
	string getRealtionName() => classof MailSettings;
	
	
	/**
	 * Returns save rules
	 */
	Vector rules() => [];
	
	
	/**
	 * Returns item fields
	 */
	Collection getItemFields() =>
	[
		"id",
		"enable",
		"plan",
		"host",
		"port",
		"login",
		"password",
		"ssl_enable",
		"is_deleted",
	];
	
	
	/**
	 * Build query
	 */
	async void buildQuery(Query q)
	{
		q.orderBy("id", "asc");
	}
	
	
	/**
	 * Action search
	 */
	@ApiMethod{ "name": "search" }
	async ApiResult actionSearch()
	{
		return await parent();
	}
}