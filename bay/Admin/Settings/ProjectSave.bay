<class name="Runtime.WordPress.Admin.Settings.ProjectSave">

<use name="Runtime.Widget.Button" component="true" />
<use name="Runtime.Widget.Input" component="true" />
<use name="Runtime.Widget.RowButtons" component="true" />
<use name="Runtime.Widget.TextArea" component="true" />
<use name="Runtime.Widget.Form.Form" component="true" />
<use name="Runtime.Widget.Form.FormRow" component="true" />
<use name="Runtime.WordPress.Admin.Settings.SettingsTabs" />

<template>
	<div class="settings">
		<SettingsTabs model={{ this.model.tabs }} />
		<Form>
			<FormRow label="Name" result={{ this.model.form.getResult("name") }}>
				<Input name="name"
					value={{ this.model.form.item.get("name") }}
					@event:valueChange="this.model.form.item.set('name', event.value)"
				/>
			</FormRow>
			<FormRow label="Version" result={{ this.model.form.getResult("version") }}>
				<Input name="version"
					value={{ this.model.form.item.get("version") }}
					@event:valueChange="this.model.form.item.set('version', event.value)"
				/>
			</FormRow>
			<FormRow label="Description" result={{ this.model.form.getResult("description") }}>
				<TextArea name="description"
					value={{ this.model.form.item.get("description") }}
					@event:valueChange="this.model.form.item.set('description', event.value)"
				/>
			</FormRow>
			%render this.renderWidget(this.model.form.result, {
				"class": "result--form"
			});
			<RowButtons>
				<Button class="button--primary button--large"
					@event:click="this.model.onSave()"
				>Save</Button>
			</RowButtons>
		</Form>
	</div>
</template>

</class>