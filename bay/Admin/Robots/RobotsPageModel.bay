namespace Runtime.WordPress.Admin.Robots;

use Runtime.ApiResult;
use Runtime.BaseModel;
use Runtime.Method;
use Runtime.Serializer;
use Runtime.Serializer.MapType;
use Runtime.Serializer.Multiline;
use Runtime.Serializer.ObjectType;
use Runtime.Serializer.StringType;
use Runtime.Web.RenderContainer;
use Runtime.Widget.Form.FormModel;
use Runtime.WordPress.Admin.Robots.RobotsPage;


class RobotsPageModel extends BaseModel
{
	string component = classof RobotsPage;
	FormModel form = null;
	
	
	/**
	 * Serialize object
	 */
	void serialize(Serializer serializer)
	{
		parent(serializer);
		serializer.addType("form", new ObjectType{
			"class_name": classof FormModel,
			"item_type": new MapType{
				"content": new StringType{},
			}
		});
	}
	
	
	/**
	 * Init widget settings
	 */
	void initWidget(Dict params)
	{
		parent(params);
		
		/* Add form */
		this.form = this.createWidget(classof FormModel);
	}
	
	
	/**
	 * Load data
	 */
	async void loadData(RenderContainer container)
	{
		ApiResult result = await this.layout.sendApi({
			"api_name": "admin.wordpress.robots",
			"method_name": "item",
		});
		if (result.isSuccess())
		{
			this.form.item = {
				"content": result.data.get("content"),
			};
		}
	}
	
	
	/**
	 * Save form
	 */
	async void onSave()
	{
		this.form.setWaitMessage();
		ApiResult result = await this.layout.sendApi({
			"api_name": "admin.wordpress.robots",
			"method_name": "save",
			"data": {
				"content": this.form.item.get("content")
			},
		});
		this.form.setApiResult(result);
	}
	
	
	/**
	 * Build title
	 */
	void buildTitle(RenderContainer container)
	{
		this.layout.setPageTitle("Robots TXT");
	}
}