<class name="Runtime.WordPress.Admin.Robots.RobotsPage">

<use name="Runtime.Widget.Button" component="true" />
<use name="Runtime.Widget.RowButtons" component="true" />
<use name="Runtime.Widget.TextArea" component="true" />
<use name="Runtime.Widget.Form.Form" component="true" />
<use name="Runtime.Widget.Form.FormRow" component="true" />

<style>
.form_settings_page{
	textarea{
		min-height: 300px;
	}
	.result{
		margin-bottom: calc(var(--space) * 2);
	}
	.row_buttons{
		justify-content: center;
	}
}
</style>

<template>
	<div class="form_settings_page">
		<Form model={{ this.model.form }}>
			<FormRow label="Robots">
				<TextArea
					value={{ this.model.form.item.get("content") }}
					@event:valueChange="this.model.form.item.set('content', event.value)"
				/>
			</FormRow>
			%render this.renderWidget(this.model.form.result, {
				"class": "result--center",
			});
			<RowButtons>
				<Button class="button--primary button--large"
					@event:click="this.model.onSave();"
				>Save</Button>
			</RowButtons>
		</Form>
	</div>
</template>

</class>