namespace Runtime.WordPress.Admin.FormData;

use Runtime.ORM.Query;
use Runtime.Web.Annotations.ApiMethod;
use Runtime.Widget.Api.SearchApi;
use Runtime.WordPress.Admin.AdminMiddleware;
use Runtime.WordPress.Database.FormData;


class FormDataSearchApi extends SearchApi
{
	/**
	 * Returns api name
	 */
	pure string getApiName() => "admin.wordpress.forms.data";
	
	
	/**
	 * Returns relation name
	 */
	string getRelationName() => classof FormData;
	
	
	/**
	 * Returns middleware
	 */
	Vector<Middleware> getMiddleware() =>
	[
		new AdminMiddleware(),
	];
	
	
	/**
	 * Returns item fields
	 */
	Collection getItemFields() =>
	[
		"id",
		"form_name",
		"form_title",
		"metrika_id",
		"data",
		"gmtime_add",
	];
	
	
	/**
	 * Build query
	 */
	async void buildQuery(Query q)
	{
		q.innerJoin("forms", "forms.id = forms_data.form_id")
			.addField("forms.name as form_name")
			.orderBy("id", "desc");
	}
	
	
	/**
	 * Action search
	 */
	@ApiMethod{ "name": "search" }
	async void actionSearch()
	{
		await parent();
	}
}