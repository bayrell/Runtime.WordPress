namespace Runtime.WordPress.Admin.GalleryItem;

use Runtime.Serializer.IntegerType;
use Runtime.Serializer.MapType;
use Runtime.Serializer.Required;
use Runtime.ORM.Query;
use Runtime.Web.Annotations.ApiMethod;
use Runtime.Widget.Api.SearchApi;
use Runtime.WordPress.Admin.AdminMiddleware;
use Runtime.WordPress.Admin.Components.ImageRule;
use Runtime.WordPress.Database.GalleryItem;


class GalleryItemSearchApi extends SearchApi
{
	/**
	 * Returns api name
	 */
	pure string getApiName() => "admin.wordpress.gallery.item";
	
	
	/**
	 * Returns record name
	 */
	pure string getRecordName() => classof GalleryItem;
	
	
	/**
	 * Returns middleware
	 */
	Vector<Middleware> getMiddleware() =>
	[
		new AdminMiddleware(),
	];
	
	
	/**
	 * Returns data rules
	 */
	void getDataRules(MapType rules)
	{
		rules.addType("foreign_key", new Required());
		rules.addType("foreign_key", new MapType{
			"item_id": new IntegerType(),
		});
	}
	
	
	/**
	 * Returns rules
	 */
	void rules() =>
	[
		new ImageRule{ "name": "image", "key": "image_id" },
	];
	
	
	/**
	 * Returns item fields
	 */
	Collection getItemFields() =>
	[
		"id",
		"name",
		"image",
		"image_id",
		"pos",
	];
	
	
	/**
	 * Build query
	 */
	async void buildQuery(Query q)
	{
		q.where("gallery_id", "=", this.foreign_key.get("item_id"));
		q.orderBy("pos", "desc");
	}
	
	
	/**
	 * Action search
	 */
	@ApiMethod{ "name": "search" }
	async void actionSearch()
	{
		await parent();
	}
}