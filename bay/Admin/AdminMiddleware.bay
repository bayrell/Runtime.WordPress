namespace Runtime.WordPress.Admin;

use Runtime.Exceptions.ApiError;
use Runtime.Exceptions.RuntimeException;
use Runtime.Web.BaseApi;
use Runtime.Web.Middleware;


class AdminMiddleware extends Middleware
{
	/**
	 * Run api
	 */
	async void api(BaseApi api)
	{
		#ifcode PHP then
		if (!is_admin() and !current_user_can("edit_pages"))
		{
			throw new ApiError(new RuntimeException("Action not allowed"));
		}
		#endif
	}
	
	
	/**
	 * Run route
	 */
	async void route(BaseApi api)
	{
		#ifcode PHP then
		if (!is_admin())
		{
			throw new ApiError(new RuntimeException("Route not allowed"));
		}
		#endif
	}
}