namespace Runtime.WordPress.Admin.Gallery;

use Runtime.Web.Annotations.ApiMethod;
use Runtime.Widget.Api.SearchApi;
use Runtime.WordPress.Admin.AdminMiddleware;
use Runtime.WordPress.Database.Gallery;


class GallerySearchApi extends SearchApi
{
	/**
	 * Returns api name
	 */
	pure string getApiName() => "admin.wordpress.gallery";
	
	
	/**
	 * Returns record name
	 */
	pure string getRecordName() => classof Gallery;
	
	
	/**
	 * Returns middleware
	 */
	Vector<Middleware> getMiddleware() =>
	[
		new AdminMiddleware(),
	];
	
	
	/**
	 * Returns item fields
	 */
	Collection getItemFields() =>
	[
		"id",
		"api_name",
	];
	
	
	/**
	 * Returns image sizes
	 */
	@ApiMethod{ "name": "image_sizes" }
	async void actionImageSizes()
	{
		Collection image_sizes;
		
		#ifcode PHP then
		$image_sizes = \Runtime\Collection::from(get_intermediate_image_sizes());
		#endif
		
		this.success({
			"data":
			{
				"items": image_sizes,
			}
		});
	}
	
	
	/**
	 * Action search
	 */
	@ApiMethod{ "name": "search" }
	async void actionSearch()
	{
		await parent();
	}
}